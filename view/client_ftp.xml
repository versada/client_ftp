<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_client_ftp_form" model="ir.ui.view">
            <field name="name">FTP Client Settings</field>
            <field name="model">client.ftp</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <group colspan="4">
                    <group string="Server">
                        <field name="name"/>
                        <field name="host"/>
                        <field name="port"/>
                    </group>
                    <group string="Login">
                        <field name="user"/>
                        <field name="password"/>
                    </group>
                </group>
                <group>
                    <label colspan="2"/>
                    <field name="connection_ok" colspan="1" nolabel="1"/>
                    <button name="test_connection" type="object" string="Test Connection" icon="gtk-apply"/>
                </group>
            </field>
        </record>

        <record id="view_client_ftp_tree" model="ir.ui.view">
            <field name="name">FTP Client Settings</field>
            <field name="model">client.ftp</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <field name="name"/>
                <field name="host"/>
                <field name="port"/>
                <field name="user"/>
            </field>
        </record>

        <record id="action_client_ftp" model="ir.actions.act_window">
            <field name="name">FTP Client Settings</field>
            <field name="res_model">client.ftp</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_client_ftp" name="FTP Client Settings"
                  parent="base.menu_config"
                  action="action_client_ftp"/>
    </data>
</openerp>
